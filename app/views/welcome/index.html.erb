<% if current_user %>
  <h3>Welcome: <%= current_user.email %></h3>
<% else %>
  <div class="jumbotron">
    <h2>Welcome to the Online Money Management with myFinanceTracker</h2>
    <p class="lead">
     A tool that makes it easy to stay in control of your finances. Sign up!
    </p>
  </div>

  <div class="row">
    <div class="plans clearfix">
      <div class="col-lg-3 col-lg-offset-3 plan"><h2>Premium Plan</h2>
        <div class="price pull-right">Price: $10</div>
        <div class="features">
          <ul>
            <li>Access account summary </li>
            <li>Access friend's tracking </li>
            <li>List Porftolio of tickers</li>
          </ul>
        </div>
        <p><%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %></p>
      </div>

      <div class="col-lg-3 plan"><h2>Amaze Plan</h2>
        <div class="price pull-right">Price: $20</div>
          <div class="features">
            <ul>
              <li>Access account summary </li>
              <li>Access to friend's tracking </li>
              <li>List Porftolio of tickers</li>
              <li class='extra'>Unlimited tickers</li>
            </ul>
        </div>
        <p><%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %></p>
      </div>

    </div>
</div>

<% end %>